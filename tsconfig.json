{
  "compilerOptions": {
    "target": "ES2019",
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2020"],
    "types": ["react", "react-dom"],

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,

    "declaration": true,
    "declarationMap": true,

    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "examples"]
}
